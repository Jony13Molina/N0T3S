<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:bottomRightRadius="10dp"
        android:radius="60dp" />

    <gradient
        android:angle="45"
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="@color/plain"
        android:gradientRadius="5.0px"
        android:startColor="@color/softGold"
        android:type="linear" />



    <size
        android:width="40dp"
        android:height="40dp" />


    <stroke
        android:width="2dp"
        android:color="@color/strongGold" />



</shape>
