<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/superBle"
    app:cardCornerRadius="10dp"
    android:foreground="?selectableItemBackground"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    tools:context=".Main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customize_border_four">

        <RelativeLayout
            android:id="@+id/titleDesign"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/customize_border_six">

            <TextView
                android:id="@+id/noTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-medium"
                android:maxLines="20"
                android:padding="10dp"
                android:paddingBottom="2dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noteBy"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noteNames"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:textAlignment="textStart"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@color/superBle"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bodydesign"
            android:layout_width="wrap_content"
            android:layout_height="177dp"
            android:layout_below="@+id/titleDesign"
            android:layout_marginTop="-6dp"
            android:background="@drawable/customize_border_four">

            <TextView
                android:id="@+id/noteDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:maxLines="30"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:textStyle="italic" />


            <RelativeLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/noteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RelativeLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/customize_border_six">


                <ImageView
                    android:id="@+id/delItem"
                    android:layout_width="216dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:contentDescription="@string/delete"
                    android:gravity="end"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_delete" />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="49dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/likeCounter"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/likeItem"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|end"
                        android:paddingEnd="5dp"
                        android:paddingStart="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/likeItem"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/Sharing"
                        android:gravity="end|center"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_thumbs_up" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>