<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/superBle"
    app:cardCornerRadius="10dp"
    android:foreground="?selectableItemBackground"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customize_border_four">

        <RelativeLayout
            android:id="@+id/titleDesign"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@drawable/customize_border_five">

            <TextView
                android:id="@+id/item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="20"
                android:padding="10dp"
                android:paddingBottom="2dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/item_info"
                android:background="@color/superBle" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bodydesign"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_below="@+id/titleDesign"
            android:layout_marginTop="-10dp"
            android:background="@drawable/customize_border_four">

            <TextView
                android:id="@+id/itemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:maxLines="20"
                android:padding="10dp"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:textStyle="italic" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemDesc">

                <TextView
                    android:id="@+id/itemYear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>