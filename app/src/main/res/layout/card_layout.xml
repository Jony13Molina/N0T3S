<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/plain"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="4dp"
    tools:context=".Main.MainActivity">


    <RelativeLayout
        android:id="@+id/bodyDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingStart="0dp"
        android:paddingLeft="20dp"
        android:paddingEnd="0dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:id="@+id/frameDesign"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradientsix"
            android:orientation="vertical">

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:paddingStart="0dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="20dp">


            <TextView
                android:id="@+id/item_info"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="start"
                android:maxLines="30"
                android:padding="5dp"
                android:paddingBottom="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/nightBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postBy"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/item_info"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="307dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="textEnd"
                android:textColor="@color/nightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/itemNames"
                android:layout_width="172dp"
                android:layout_height="20dp"
                android:layout_below="@+id/item_info"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="135dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal"
                android:maxLines="30"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:textColor="@color/nightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/itemYear"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/itemNames"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="233dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="-11dp"
                android:layout_marginEnd="33dp"
                android:layout_toRightOf="@+id/itemNames"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/nightBlack"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="375dp"
            android:layout_height="74dp"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/itemDesc"
                android:layout_width="360dp"
                android:layout_height="62dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@string/common_google_play_services_updating_text"
                android:maxLines="40"
                android:padding="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/nightBlack"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-1dp"
            android:orientation="horizontal"
            android:scaleType="fitEnd">


            <RelativeLayout
                android:id="@+id/delLayout"
                android:layout_width="174dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/gradientthree"
                android:orientation="horizontal"
                android:scaleType="fitEnd">


                <ImageView
                    android:id="@+id/deleteItem"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/Sharing"
                    android:gravity="right"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_complete_circle"
                    android:textStyle="italic" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/shareItem"
                android:layout_width="184dp"
                android:layout_height="25dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/likeLayout"
                android:layout_weight=".2"
                android:background="@drawable/gradientthree"
                android:contentDescription="@string/delete"
                android:gravity="right"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_share" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>