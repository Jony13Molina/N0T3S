<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">


        <item name="colorPrimary">@color/superBle</item>
        <item name="colorPrimaryDark">@color/superBle</item>
        <item name="colorAccent">@color/delightfulBlue</item>

        <item name="android:navigationBarColor">@color/superBle</item>

    </style>

    <style name="customTheme" parent="android:Theme.Light">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/teal</item>
        <item name="android:navigationBarColor">@color/teal</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/superBle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/cadetBlue</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/superBle</item>
        <item name="colorControlNormal">@color/goodBlue</item>
        <item name="colorControlActivated">@color/superBle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:colorControlActivated">@color/softeRealBlue</item>
        <item name="android:headerBackground"> @color/softeRealBlue</item>
        . . .
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>



    <!--- Base Theme For Application -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/realBlue</item>
        <item name="colorPrimaryDark">@color/realBlue</item>
        <item name="android:navigationBarColor">@color/realBlue</item>
        <item name="colorAccent">@color/softeRealBlue</item>


    </style>


    <!--PopUp Windows Activitites-->

    <style name="AppBaseTheme.CutomThem" parent="Theme.AppCompat.DayNight.NoActionBar">
       <item name="android:windowIsTranslucent">true</item>
       <item name="android:windowCloseOnTouchOutside">true</item>


    </style>


    <!--For the Splash ScreeN-->

    <style name="SpkashThem" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/newn0t3snoti</item>



    </style>

</resources>
